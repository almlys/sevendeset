<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE sd7hooks SYSTEM "http://7d7.almlys.org/spec/draft/sd7Hooks.dtd">
<sd7hooks>

	<!-- Define a object that will do some things
			 The object will be instanciancied when it is used
	-->
	<controller name='gui' bind='sd7.logic.gui.GUI' autostart='false' >
		<param name='layout'>main.layout</param>
	</controller>
	
	<!-- Define Basic System Key bindings -->
	<controller name='basicInput'
    bind='sd7.system.basicInput.MyBasicInputHandler'
    autostart='true'
    target='main' />
    
    <!-- Script that set ups the Camera -->
    <controller name = 'Cam'
    bind = 'sd7.logic.camera.Camera'
    autostart = 'true' />


	<controller name='startup' bind='sd7.system.startup.StartupHandler' target='main' />
	
	<controller name='chatapp' bind='sd7.logic.chatapp.ChatApp' autostart='true' />

    <!-- target is used?
        add priority, please!
        events map not used!?
        -->
	
	<!-- Associate an event with an object -->
	<event name='input' bind='basicInput' />
	
	<event name='system.startup' bind='startup' />

	
	
</sd7hooks>